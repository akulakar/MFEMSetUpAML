{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build current file with MFEM",
      "type": "shell",
      "command": "/usr/bin/clang++",
      "args": [
        "-std=c++17",
        "${file}",
        "../../mfemplus/custombilininteg.cpp",
        "../../mfemplus/customfunctions.cpp",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-I../../serial/mfem",
        "-I../../serial/mfem/fem",
 	      "-I../../serial/mfem/data",
        "-I../../serial/mfem/linalg",
        "-I../../serial/mfem/general",
        "-I../../serial/mfem/mesh",
        "-I../../mfemplus",
        "-I/opt/homebrew/Cellar/nlohmann-json/3.12.0/include",
        "-L../../serial/mfem",
        "-lmfem",
        "-lpthread",
        "-ldl"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
